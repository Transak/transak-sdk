{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* Linting */
    "strict": true,

    /* Path aliases */
    "paths": {
      "Assets/*": ["./src/Assets/*"],
      "Components/*": ["./src/Components/*"],
      "Constants/*": ["./src/Constants/*"],
      "Types/*": ["./src/Types/*"],
      "Utils/*": ["./src/Utils/*"],
      "package.json": ["./package.json"]
    }
  },
  "include": [
    "src/**/*",
    "tsup.config.json"
  ]
}
